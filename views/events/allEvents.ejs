<% layout('/layouts/boilerplate.ejs') %>
<%= success %>
<body>
    <h3>All Events</h3>
    
    <div class="row row-cols-lg-3 row-cols-md-2 row-colssm-1 g-4">
    <% for(let event of allEvents) { %>
        <a href="/events/<%= event._id %>" class="event-link">
        <div class="card h-100" >
        <img src="<%= event.image %>" class="card-img-top" alt="event_image" style="height: 20rem;">
        <br>
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <h5 class="card-title"><%= event.title %></h5>
          <br>
          <p class="card-text"><%= event.description.substring(0,100)%>...</p>
          <p>
            <%= new Date(event.date).toLocaleDateString('en-US', {
              weekday: 'short',
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            }) %>
          </p>
          
          <p> &#8377;<%= event.price.toLocaleString("en-IN") %> </p>
          <p><%=event.location %></p>
          
        
          
        </div>
        
      </div>
      </a>
    <%}%>
    </div>
    
</body>


